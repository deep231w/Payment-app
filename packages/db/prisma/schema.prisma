
generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id        Int @id @default(autoincrement())
  email     String? @unique
  name      String?
  number    String @unique
  password  String
  balance   Balance[]
}

model Merchant {
  id Int @id @default(autoincrement())
  email String @unique
  password String 
  Auth_type AuthType
}

model Balance {
  id     Int  @id @default(autoincrement())
  userId Int  @unique
  amount Int
  locked Int
  user   User @relation(fields: [userId], references: [id])
}

enum AuthType {
  Google
  Github
}